---
import landingImage from '../assets/glow-salon-landing.webp';
import headerLogo from '../assets/glow-salon-alt-header-logo.webp';
import hairServiceImage from '../assets/services/hair-services.webp';
import nailServiceImage from '../assets/services/nails.webp';
import makeupServiceImage from '../assets/services/makeup-artist.webp';
import giftCardImage from '../assets/services/salon-egift.webp';

export interface Props {
	title: string;
	description: string;
	canonicalURL?: string;
	ogImage?: string;
	ogType?: string;
	articlePublishedTime?: string;
	articleModifiedTime?: string;
	articleAuthor?: string;
	articleSection?: string;
	articleTag?: string;
}

const { 
	title, 
	description, 
	canonicalURL = Astro.url.href,
	ogImage = landingImage.src,
	ogType = "website",
	articlePublishedTime,
	articleModifiedTime,
	articleAuthor,
	articleSection,
	articleTag
} = Astro.props;

// Generate structured data for the page
const structuredData: any = {
	"@context": "https://schema.org",
	"@type": "WebPage",
	"name": title,
	"description": description,
	"url": canonicalURL,
	"mainEntity": {
		"@type": "BeautySalon",
		"name": "Glow Salon & Spa",
		"image": "/glow-salon-logo.webp",
		"url": "https://www.glowsalonwestclay.com",
		"telephone": "317-846-3073",
		"priceRange": "$$",
		"address": {
			"@type": "PostalAddress",
			"streetAddress": "1928 Rhettsbury St",
			"addressLocality": "Carmel",
			"addressRegion": "IN",
			"postalCode": "46032",
			"addressCountry": "US"
		},
		"geo": {
			"@type": "GeoCoordinates",
			"latitude": 39.924550,
			"longitude": -86.183260
		},
		"openingHoursSpecification": [
			{
				"@type": "OpeningHoursSpecification",
				"dayOfWeek": ["Tuesday", "Wednesday", "Thursday", "Friday"],
				"opens": "09:00",
				"closes": "18:00"
			},
			{
				"@type": "OpeningHoursSpecification",
				"dayOfWeek": "Saturday",
				"opens": "09:00",
				"closes": "16:00"
			}
		],
		"sameAs": [
			"https://www.facebook.com/GlowSalonWestClay/",
			"https://www.instagram.com/glowsalonwestclay/"
		],
		"hasOfferCatalog": {
			"@type": "OfferCatalog",
			"name": "Beauty Services",
			"itemListElement": [
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "Hair Services",
						"description": "Professional haircuts, coloring, highlights, and treatments"
					}
				},
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "Nail Services",
						"description": "Manicures, pedicures, gel and dip treatments"
					}
				},
				{
					"@type": "Offer",
					"itemOffered": {
						"@type": "Service",
						"name": "Makeup Services",
						"description": "Professional makeup application and waxing services"
					}
				}
			]
		}
	}
};

// Add article-specific structured data if provided
if (articlePublishedTime) {
	structuredData["@type"] = "Article";
	structuredData.datePublished = articlePublishedTime;
	if (articleModifiedTime) structuredData.dateModified = articleModifiedTime;
	if (articleAuthor) structuredData.author = { "@type": "Person", "name": articleAuthor };
	if (articleSection) structuredData.articleSection = articleSection;
	if (articleTag) structuredData.articleTag = articleTag;
}
