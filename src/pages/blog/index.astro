---
/**
 * Blog listing page
 * Single Responsibility: Display all blog posts with cards
 */
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumbs from '../../components/SEO/Breadcrumbs.astro';
import { BUSINESS_INFO } from '../../config/constants';
import { blogPosts } from '../../data/blog';

const title = "Blog | Glow Salon & Spa | Beauty Tips & Style Inspiration";
const description = "Expert beauty tips, hair color inspiration, bridal guides, and nail care advice from the stylists at Glow Salon & Spa in Carmel, Indiana.";
---

<Layout title={title} description={description}>
    <Breadcrumbs items={[
        { name: "Home", url: BUSINESS_INFO.website },
        { name: "Blog", url: Astro.url.href },
    ]} />

    <Header />

    <main class="blog-page">
        <div class="blog-container">
            <div class="blog-header">
                <h1>Blog</h1>
                <p>Beauty tips, style inspiration, and salon news from our team</p>
            </div>

            <div class="blog-grid">
                {blogPosts.map((post) => (
                    <a href={`/blog/${post.slug}`} class="blog-card">
                        <div class="blog-card-content">
                            <div class="blog-card-meta">
                                <span class="blog-card-category">{post.category}</span>
                                <span class="blog-card-date">
                                    {new Date(post.publishedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                                </span>
                            </div>
                            <h2>{post.title}</h2>
                            <p>{post.description}</p>
                            <div class="blog-card-footer">
                                <span class="read-time">{post.readTime}</span>
                                <span class="read-more">Read more &rarr;</span>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .blog-page {
        padding: 2rem 0;
        min-height: 80vh;
    }

    .blog-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .blog-header h1 {
        font-family: 'Safira March', serif;
        color: #333333;
        font-weight: 700;
        font-size: 2.5rem;
        margin: 0 0 10px 0;
    }

    .blog-header p {
        font-family: 'Poppins', sans-serif;
        color: #656565;
        font-size: 1.1rem;
        line-height: 1.6;
        margin: 0;
    }

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
        gap: 30px;
    }

    .blog-card {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-decoration: none;
        color: inherit;
        transition: all 0.3s ease;
        overflow: hidden;
        border: 1px solid #f0ebe6;
    }

    .blog-card:visited {
        color: inherit;
    }

    .blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .blog-card-content {
        padding: 25px;
    }

    .blog-card-meta {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 15px;
    }

    .blog-card-category {
        font-family: 'Poppins', sans-serif;
        font-size: 0.8rem;
        font-weight: 600;
        color: #D4B2A7;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .blog-card-date {
        font-family: 'Poppins', sans-serif;
        font-size: 0.8rem;
        color: #999999;
    }

    .blog-card h2 {
        font-family: 'Safira March', serif;
        color: #333333;
        font-size: 1.3rem;
        font-weight: 700;
        line-height: 1.3;
        margin: 0 0 12px 0;
    }

    .blog-card p {
        font-family: 'Poppins', sans-serif;
        color: #555555;
        font-size: 0.9rem;
        line-height: 1.6;
        margin: 0 0 20px 0;
    }

    .blog-card-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .read-time {
        font-family: 'Poppins', sans-serif;
        font-size: 0.8rem;
        color: #999999;
    }

    .read-more {
        font-family: 'Poppins', sans-serif;
        font-size: 0.9rem;
        font-weight: 600;
        color: #D4B2A7;
        transition: color 0.3s ease;
    }

    .blog-card:hover .read-more {
        color: #333333;
    }

    @media (max-width: 768px) {
        .blog-header h1 {
            font-size: 2rem;
        }

        .blog-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .blog-container {
            padding: 0 15px;
        }
    }
</style>
