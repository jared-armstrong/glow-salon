---
import ServicePage from '../../components/salon-services/ServicePage.astro';
import { nailFAQs } from '../../data/faqs';

const title = "Nail Services in Carmel, IN | Glow Salon & Spa";
const description = "Professional nail services including manicures, pedicures, gel and dip treatments. Serving Carmel, Indiana.";

const nail_services = [
    { serviceName: "Manicure", price: "$30" },
    { serviceName: "Gel Manicure", price: "$50" },
    { serviceName: "Dip Manicure", price: "$60" },
    { serviceName: "Spa Pedicure", price: "$65" },
    { serviceName: "Classic Pedicure", price: "$55" }
]
---

<ServicePage 
    title={title}
    description={description}
    pageTitle="Nail Services"
    introText="Relaxing and professional nail care services for beautiful, healthy nails."
    services={nail_services}
    faqs={nailFAQs}
/>
