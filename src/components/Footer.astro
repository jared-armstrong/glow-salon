---
/**
 * Footer component
 * Single Responsibility: Display site footer with logo, contact info, and social icons
 */
import FooterLogo from '../assets/glow-salon-footer-logo.webp';
import SocialIcons from './SocialIcons.astro';
import StructuredData from './SEO/StructuredData.astro';
import { generateBeautySalonSchema } from '../utils/structuredData';
import { BUSINESS_INFO } from '../config/constants';
import { Image } from 'astro:assets';
---

<StructuredData data={generateBeautySalonSchema()} />

<footer class="footer" role="contentinfo">
  <div class="footer-content">
    <div class="logo-container">
      <Image
        src={FooterLogo}
        alt="Glow Salon Logo"
        class="footer-logo"
        loading="lazy"
        decoding="async"
      />
    </div>

    <div class="address-info">
      <p class="contact-info">
        <a href={`tel:${BUSINESS_INFO.phone.replace(/-/g, '')}`}>
          {BUSINESS_INFO.phone}
        </a>
      </p>
      <p class="contact-info">
        {BUSINESS_INFO.address.street} {BUSINESS_INFO.address.city}, {BUSINESS_INFO.address.state} {BUSINESS_INFO.address.zip}
      </p>
    </div>

    <SocialIcons variant="dark" />
  </div>
</footer>

<style>
  .footer {
    background-color: #333333;
    padding: 20px;
    
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .logo-container {
    display: flex;
    align-items: center;
  }

  .footer-logo {
    width: 180px;
    height: auto;
  }

  .address-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .contact-info {
    margin: 0;
    font-size: 16px;
    color: #EDE9E3;
    font-family: 'Brush Script MT', 'Pacifico', 'Comic Sans MS';
  }

  .contact-info a {
    color: #EDE9E3;
    text-decoration: none;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 4px;
    }

    .logo-container {
      display: none;
    }

    .address-info {
      order: 1;
    }

    .contact-info {
      font-size: 14px;
    }
  }
</style>
