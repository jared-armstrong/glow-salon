---
import hairServiceImage from '../assets/services/hair-services.jpg'
import Card from './Card.astro';
import nailServiceImage from '../assets/services/nails.jpg'
import makeupServiceImage from '../assets/services/makeup-artist.png';

const services = [
  {
    image: hairServiceImage.src,
    serviceName: 'Hair',
    sectionId: 'hair',
    altText: 'Haircuts, hair styling, and balayage at Glow Salon & Spa in Carmel, Indiana'
  },
  {
    image: nailServiceImage.src,
    serviceName: 'Nails',
    sectionId: 'nails',
    altText: 'Manicures, pedicures, and gel nails at Glow Salon & Spa in Carmel, Indiana'
  },
  {
    image: makeupServiceImage.src,
    serviceName: 'Waxing & Makeup',
    sectionId: 'waxing',
    altText: 'Professional waxing and makeup services at Glow Salon & Spa in Carmel, Indiana'
  }
];

import { getPermalink } from '../utils/permalinks.js';

---

<section class="salon-services">
  <h1 class="section-header">Our Services</h1>
  <div class="cards">
    {services.map((service) => (
      <a href={getPermalink(`/services#${service.sectionId}`)}>
        <Card image={service.image} serviceName={service.serviceName} seoAlt={service.altText} />
      </a>
    ))}
  </div>  
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap');
  .salon-services {
    width: 100%;
  }

  .section-header {
    display: flex;
    justify-content: center;
    font-family: 'Safira March';
    color: #333333;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0;
    font-size: 3.5rem;
  }

  .cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    width: 100%;
  }

  @media (max-width: 767px) {
    .cards {
      flex-direction: column;
    }
    .section-header {
      font-size: 2.0rem;
    }
  }
</style>