---
/**
 * ContactForm component
 * Single Responsibility: Display contact form
 */
import { BUSINESS_INFO } from '../config/constants';
---

<h1 class="contact-form-title">Contact Us</h1>

<form action={`https://formspree.io/f/${BUSINESS_INFO.formspreeId}`} method="POST" class="contact-form">
    <label for="name">
        <input type="text" name="name" placeholder="Name" required>
    </label>

    <label for="email">
        <input type="email" name="email" placeholder="your@email.com" required>
    </label>

    <label for="message">
        <textarea name="message" placeholder="What services are you interested in?" required></textarea>
    </label>

    <button type="submit">Submit</button>
</form>

<style>
    .contact-form-title {
        text-align: center;
        margin-top: 70px;
        margin-bottom: 15px;
        color: #333333;
        font-family: 'Safira March';
        font-size: 42px;
    }

  /* Centering the form */
    .contact-form {
        display: flex;
        flex-direction: column;
        gap: 20px;
        width: 300px;
        margin: auto;
        padding: 24px;
        position: relative;
    }

    input::placeholder,
    textarea::placeholder {
        color: #333333;
    }


  /* Styling inputs and textarea */
  .contact-form input,
  .contact-form textarea {
      width: 100%;
      border: none;
      border-bottom: 3px solid #e7d7c9;
      padding: 10px 5px;
      font-size: 18px;
      outline: none;
      background: transparent;
      font-family: 'Brush Script MT', 'Pacifico', 'Comic Sans MS';
      color: #333333;
  }

  .contact-form textarea {
      height: 50px;
      resize: none;
  }

  /* Styling the submit button */
  .contact-form button {
      align-self: flex-end;
      background-color: #e7d7c9;
      color: #333333;
      border: none;
      padding: 12px 24px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
      transition: background 0.3s ease;
      border-radius: 4px;
  }

  .contact-form button:hover {
      background-color: #333333;
      color: #e7d7c9;
  }

</style>
