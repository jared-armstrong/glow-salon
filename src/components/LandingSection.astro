---
import landingImage from '../assets/glow-salon-landing.webp'
const bookingUrl = 'https://na0.meevo.com/CustomerPortal/login?tenantId=103761&locationId=106841'
import { Image } from 'astro:assets'
---

<section class="call-to-action">
  <div class="left-content">
    <h1 class="main-heading">Glow With Us Today</h1>
    <a 
      href={bookingUrl} target="_blank"
      class="book-now">Book Appointment
    </a>
  </div>
  <Image 
    src={landingImage} 
    alt="Glow Salon & Spa - Hair, Nails, and Beauty Services in Carmel, Indiana"
    loading="eager"
    fetchpriority="high"
    decoding="async"
  />

</section>

<style>
  .call-to-action {
    width: 100%;
    position: relative;
    display: flex;
    align-items: center;
  }

  .left-content {
    width: 60%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .main-heading {
    font-size: 3.5rem;
    font-weight: bold;
    font-family: 'Brush Script MT', 'Pacifico', 'Comic Sans MS';
    color: #333;
    text-align: center;
    margin-bottom: 2rem;
  }

  .call-to-action img {
    width: 40%;
    height: auto;
  }

  .book-now {
    text-decoration: none;
    padding: 20px 40px;
    font-size: 2.0rem;
    font-weight: bold;
    font-family: 'Brush Script MT', 'Pacifico', 'Comic Sans MS';
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2px solid #333;
    cursor: pointer;
    background-color: white;
    color: #333;
    border-radius: 0;
    transition: all 0.3s ease;
  }

  .book-now:hover {
    background-color: #333;
    color: white;
  }
    @media (max-width: 1400px) {
      .main-heading {
        font-size: 3rem;
      }
      .book-now {
        padding: 18px 36px;
        font-size: 1.8rem;
      }
    }

    @media (max-width: 1200px) {
      .main-heading {
        font-size: 2.5rem;
      }
      .book-now {
        padding: 16px 32px;
        font-size: 1.6rem;
      }
    }
  
    @media (max-width: 1024px) {
      .left-content {
        width: 60%;
        padding: 1rem;
      }
      .call-to-action img {
        width: 40%;
      }
      .main-heading {
        font-size: 2rem;
      }
      .book-now {
        font-size: 1.3rem;
        padding: 16px 32px;
      }
    }
  
    @media (max-width: 768px) {
      .call-to-action {
        flex-direction: column;
        text-align: center;
      }
      .left-content {
        width: 100%;
      }
      .call-to-action img {
        width: 100%;
        margin-top: 2rem;
      }
      .main-heading {
        font-size: 1.8rem;
      }
      .book-now {
        font-size: 1.2rem;
        padding: 12px 24px;
      }
      .book-now:hover {
        background-color: #333;
        color: white;
      }
    }

    @media (max-width: 431px) {
      .left-content {
        padding: 1.5rem 0.5rem;
      }
      
      .main-heading {
        font-size: 1.4rem;
      }
      .book-now {
        font-size: 1rem;
        padding: 8px 16px;
      }
      .book-now:hover {
        background-color: #333;
        color: white;
      }
    }
</style>