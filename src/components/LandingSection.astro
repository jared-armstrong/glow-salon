---
import image from '../assets/Glow Salon & Spa Landing.png'
// const bookingUrl = 'https://na0.meevo.com/CustomerPortal/login?tenantId=103761&locationId=106841'
---

<section class="hero-container">
  <img src={image.src} alt="Glow Salon" />
    <a 
      href="tel:+13178463073"
      class="book-now">Call to Book
    </a>
</section>

<style>
  .hero-container {
    width: 100%;
    position: relative;
  }

  .hero-container img {
    width: 100%;
    height: auto;
  }

  .book-now {
    text-decoration: none;
    position: absolute;
    right: 180px;
    top: 79%;
    z-index: 10;
    padding: 20px 40px;
    font-size: 2.0rem;
    font-weight: bold;
    font-family: 'Brush Script MT', 'Pacifico', 'Comic Sans MS';
    display: flex;
    justify-content: center;
    align-items: center;
    border: 2px solid white; /* Solid white border */
    cursor: pointer;
    background-color: transparent; /* Clear background */
    color: white; /* White text */
    border-radius: 0; /* No rounded corners for a rectangle */
}


    @media (max-width: 1400px) {
      .book-now {
          right: 80px;
          top: 73%;
          padding: 18px 36px;
      }
    }

    @media (max-width: 1200px) {
      .book-now {
          right: 175px;
          top: 55%;
          padding: 16px 32px;
      }
    }
  
    @media (max-width: 1024px) {
        .book-now {
            right: 50px;
            top: 70%;
            font-size: 1.3rem;
            padding: 16px 32px;
        }
    }
  
      @media (max-width: 768px) {
        .book-now {
          right: 60px;
          top: 75%;
          font-size: 1.2rem;
          padding: 7px 16px;
        }
      }

      @media (max-width: 431px) {
        .book-now {
          right: 20px;
          top: 73%;
          font-size: 0.6rem;
          padding: 5px 12px;
        }
      }
</style>