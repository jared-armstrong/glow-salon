---
interface Props {
  serviceName: string;
  description?: string;
  price: string;
}

const { serviceName, description, price } = Astro.props;
---

<div class="service-container">
  <h3 class="service-name">{serviceName}</h3>
  {description && <p class="description">{description}</p>}
  <p class="price">
    {price}
  </p>
</div>


<style>
    .service-container {
        display: flex;
        flex-direction: column;
        width: 90%;
        padding-left: 20px;
        margin-bottom: 0;
    }

    .service-name {
        color: #D9A695;
        font-family: 'Brush Script MT', cursive; 
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 0;
        max-width: 85%;
    }

    .description {
        margin-bottom: 0;
    }

    .price {
        font-family: 'Poppins', sans-serif;
        font-size: 1.1rem;
        font-weight: bold;
    }
</style>