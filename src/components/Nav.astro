---
/**
 * Nav component
 * Single Responsibility: Display main navigation menu
 */
import { NAVIGATION_LINKS } from '../config/constants';

const currentPath = Astro.url.pathname;
---

<nav class="header-nav">
    {NAVIGATION_LINKS.map((link) => (
        <a
            href={link.href}
            class={`nav-link ${currentPath === link.href ? 'active' : ''}`}
        >
            {link.label}
        </a>
    ))}
</nav>

<style>
    .header-nav {
        display: flex;
        gap: 30px;
        align-items: center;
    }

    .nav-link {
        color: #333333;
        text-decoration: none;
        font-family: Arial, sans-serif;
        font-size: 16px;
        font-weight: 400;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #D4B2A7; /* Deeper rose/copper color for hover state */
    }

    .nav-link.active {
        color: #D4B2A7; /* Deeper rose/copper color for active state */
    }
</style> 