---
/**
 * BridalGallery component
 * Single Responsibility: Display elegant bridal photo gallery with SEO-optimized images
 */
import { Image } from 'astro:assets';
import StructuredData from './SEO/StructuredData.astro';
import { BUSINESS_INFO } from '../config/constants';

import img1 from '../assets/bridal/20250709_215524_272BE9.webp';
import img2 from '../assets/bridal/IMG_0951_18rs.webp';
import img3 from '../assets/bridal/IMG_1747rs.webp';
import img4 from '../assets/bridal/IMG_3583.webp';
import img5 from '../assets/bridal/IMG_3704rs.webp';
import img6 from '../assets/bridal/KAD_7303rs.webp';

const galleryImages = [
    { src: img1, alt: "Bridal hair styling by Glow Salon & Spa in Carmel, Indiana" },
    { src: img2, alt: "Wedding day updo and bridal makeup by Glow Salon stylists" },
    { src: img3, alt: "Bride getting ready with professional hair and makeup in Carmel, IN" },
    { src: img4, alt: "Bridal party hair styling at Glow Salon & Spa, serving Carmel, Westfield, and Fishers" },
    { src: img5, alt: "Professional bridal hairstyle for Indiana wedding by Glow Salon & Spa" },
    { src: img6, alt: "Wedding hair and makeup services in Carmel, Indiana by Glow Salon & Spa" },
];

const imageGallerySchema = {
    "@context": "https://schema.org",
    "@type": "ImageGallery",
    name: "Bridal Hair & Makeup Gallery - Glow Salon & Spa",
    description: "Photos of bridal hair and makeup services by Glow Salon & Spa in Carmel, Indiana. Serving brides in Carmel, Westfield, Fishers, and the greater Indianapolis area.",
    url: `${BUSINESS_INFO.website}/services/bridal`,
    creator: {
        "@type": "BeautySalon",
        name: BUSINESS_INFO.name,
    },
};
---

<StructuredData data={imageGallerySchema} />

<section class="bridal-gallery" aria-label="Bridal hair and makeup gallery">
    <h2 class="gallery-heading">Our Bridal Work</h2>
    <p class="gallery-subtext">Real brides styled by the Glow Salon & Spa team</p>

    <div class="gallery-grid">
        {galleryImages.map((image, index) => (
            <div class="gallery-item">
                <Image
                    src={image.src}
                    alt={image.alt}
                    class="gallery-image"
                    loading="lazy"
                    decoding="async"
                    widths={[400, 600, 800]}
                    sizes="(max-width: 480px) 100vw, (max-width: 768px) 50vw, 33vw"
                />
            </div>
        ))}
    </div>
</section>

<style>
    .bridal-gallery {
        margin: 50px 0 40px 0;
    }

    .gallery-heading {
        font-family: 'Safira March', serif;
        color: #333333;
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0 0 8px 0;
    }

    .gallery-subtext {
        font-family: 'Inter', 'Poppins', sans-serif;
        color: #8a8a8a;
        font-size: 0.95rem;
        font-weight: 300;
        margin: 0 0 30px 0;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 6px;
    }

    .gallery-item {
        position: relative;
        overflow: hidden;
        aspect-ratio: 3 / 4;
        background-color: #f5f0ec;
    }

    .gallery-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.5s ease, filter 0.5s ease;
    }

    .gallery-item:hover .gallery-image {
        transform: scale(1.04);
        filter: brightness(1.03);
    }

    /* First image spans 2 rows for visual interest */
    .gallery-item:first-child {
        grid-row: span 2;
    }

    @media (max-width: 768px) {
        .gallery-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 4px;
        }

        .gallery-item:first-child {
            grid-row: span 2;
        }

        .gallery-heading {
            font-size: 1.5rem;
        }

        .bridal-gallery {
            margin: 30px 0;
        }
    }

    @media (max-width: 480px) {
        .gallery-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 3px;
        }

        .gallery-item:first-child {
            grid-row: span 1;
            grid-column: span 2;
            aspect-ratio: 4 / 3;
        }
    }
</style>
