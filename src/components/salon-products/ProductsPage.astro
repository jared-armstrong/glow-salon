---
import Header from '../Header.astro';
import Card from '../Card.astro';
import Layout from '../../layouts/Layout.astro';
import Footer from '../Footer.astro';
import HomeButton from '../buttons/HomeButton.astro';
import '../../styles/services.css';

export interface Props {
    title: string;
    description: string;
    pageTitle: string;
    introText: string;
    products: Array<{
        name: string;
        image: string;
        affiliateLink: string;
        seoAlt: string;
    }>;
}   

const { title, description, pageTitle, introText, products } = Astro.props;
--- 

<Layout title={title} description={description}>
    <Header />
    <HomeButton />
    <main class="products-page">
        <h1>{pageTitle}</h1>
        <p class="products-intro">{introText}</p>

        <div class="products-grid">
            {products.map((product) => (
                <a href={product.affiliateLink} target="_blank" rel="noopener noreferrer" class="product-link">
                    <Card 
                        image={product.image}
                        serviceName={product.name}
                        seoAlt={product.seoAlt}
                    />
                </a>
            ))}
        </div>

        <div class="disclaimer">
            <p><strong>Affiliate Disclosure:</strong> As an Amazon Associate, we earn from qualifying purchases. These links help support our salon and allow us to continue providing excellent service to our clients.</p>
        </div>

    </main>
    <Footer />
</Layout>

<style>
    .products-page {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        min-height: 100vh;
    }

    .products-intro {
        font-size: 1.2rem;
        color: #656565;
        margin: 0 auto 3rem auto;
        line-height: 1.6;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .product-link {
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s ease;
        display: block;
    }

    .product-link:hover {
        transform: translateY(-5px);
    }

    .disclaimer {
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 8px;
        padding: 1.5rem;
        text-align: center;
        margin-top: 2rem;
    }

    .disclaimer p {
        margin: 0;
        color: #666666;
        font-size: 0.9rem;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .products-page {
            padding: 1rem;
        }

        .products-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }
</style> 