---
import Logo from '../assets/glow-salon-header-logo.png';
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Glow Salon and Spa</title>
    <style>
        header {
            background-color: #333333;
            padding: 20px;
            text-align: center;
            position: relative;
        }

        h1 {
            color: #ede9e3;
            font-family: 'Safira March';
            margin: 0;
        }

        .logo {
            display: none; /* Hide logo by default */
            position: absolute;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            width: 120px; /* Adjust size as needed */
            height: auto;
        }

        @media (min-width: 769px) {
            .logo {
                display: block; /* Show logo only for screens larger than 768px */
            }
        }
    </style>
</head>
<body>

    <header>
        <img src={Logo.src} alt="Glow Salon Logo" class="logo" />
        <h1>Glow Salon and Spa</h1>
    </header>

</body>
</html>
