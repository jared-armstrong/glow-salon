---
/**
 * BridalBanner component
 * Single Responsibility: Display promotional banner for bridal services
 */
---

<div class="bridal-banner">
  <div class="banner-content">
    <div class="banner-icon">üíç</div>
    <div class="banner-text">
      <h3>Now Offering Bridal Services!</h3>
      <p>We now offer professional bridal hair & makeup for your special day</p>
    </div>
    <a href="/services/bridal" class="banner-cta">Our Bridal Services</a>
  </div>
</div>



<style>
  .bridal-banner {
    background: linear-gradient(135deg, #fff5f5 0%, #fef7f0 100%);
    border: 2px solid #f8d7da;
    border-radius: 15px;
    margin: 20px auto;
    max-width: 1200px;
    box-shadow: 0 4px 20px rgba(255, 107, 107, 0.15);
    animation: bannerSlideIn 0.6s ease-out;
  }
  
  @keyframes bannerSlideIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .banner-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem 2rem;
    gap: 1rem;
    position: relative;
  }
  
  .banner-icon {
    font-size: 2.5rem;
    animation: sparkle 2s infinite;
    flex-shrink: 0;
  }
  
  @keyframes sparkle {
    0%, 100% { transform: scale(1) rotate(0deg); }
    50% { transform: scale(1.1) rotate(5deg); }
  }
  
  .banner-text {
    flex: 1;
    text-align: center;
  }
  
  .banner-text h3 {
    font-family: 'Safira March', serif;
    color: #333;
    margin: 0 0 0.5rem 0;
    font-size: 1.4rem;
    font-weight: 700;
  }
  
  .banner-text p {
    color: #666;
    margin: 0;
    font-size: 1rem;
    line-height: 1.4;
  }
  
  .banner-cta {
    background: linear-gradient(135deg, #ff6b6b 0%, #ff8e8e 100%);
    color: white;
    padding: 10px 20px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 10px rgba(255, 107, 107, 0.3);
    flex-shrink: 0;
  }
  
  .banner-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(255, 107, 107, 0.4);
  }
  

  
  @media (max-width: 768px) {
    .bridal-banner {
      margin: 15px;
      border-radius: 12px;
    }
    
    .banner-content {
      flex-direction: column;
      text-align: center;
      padding: 1.5rem 1rem;
      gap: 1rem;
    }
    
    .banner-text h3 {
      font-size: 1.2rem;
    }
    
    .banner-text p {
      font-size: 0.9rem;
    }
    
    .banner-icon {
      font-size: 2rem;
    }
    
    .banner-cta {
      padding: 8px 16px;
      font-size: 0.85rem;
    }
    

  }
  
  @media (max-width: 480px) {
    .banner-content {
      padding: 1rem;
    }
    
    .banner-text h3 {
      font-size: 1.1rem;
    }
    
    .banner-text p {
      font-size: 0.85rem;
    }
  }
</style> 