---
/**
 * CalendlyButton component
 * Single Responsibility: Display a styled call-to-action button for Calendly scheduling
 */

export interface Props {
    href: string;
    label?: string;
    icon?: string;
    variant?: 'primary' | 'secondary';
    className?: string;
}

const { 
    href, 
    label = "Schedule Consultation", 
    icon = "ðŸ“…",
    variant = "primary",
    className = ""
} = Astro.props;
---

<a 
    href={href} 
    target="_blank" 
    rel="noopener noreferrer" 
    class:list={["calendly-button", `calendly-button--${variant}`, className]}
>
    <span class="calendly-button__icon">{icon}</span>
    <span class="calendly-button__text">{label}</span>
</a>

<style>
    .calendly-button {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 28px;
        text-decoration: none;
        font-size: 1rem;
        font-weight: 600;
        font-family: 'Inter', sans-serif;
        border-radius: 8px;
        transition: all 0.3s ease;
        cursor: pointer;
        min-width: 200px;
        justify-content: center;
    }

    .calendly-button--primary {
        background: linear-gradient(135deg, #D4B2A7 0%, #c9a396 100%);
        color: white;
        border: 2px solid #D4B2A7;
        box-shadow: 0 4px 12px rgba(212, 178, 167, 0.35);
    }

    .calendly-button--primary:hover {
        background: linear-gradient(135deg, #c9a396 0%, #be9485 100%);
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(212, 178, 167, 0.5);
    }

    .calendly-button--secondary {
        background-color: white;
        color: #333333;
        border: 2px solid #333333;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .calendly-button--secondary:hover {
        background-color: #333333;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .calendly-button:active {
        transform: translateY(0);
    }

    .calendly-button__icon {
        font-size: 1.2rem;
        line-height: 1;
    }

    .calendly-button__text {
        line-height: 1;
    }

    @media (max-width: 768px) {
        .calendly-button {
            padding: 14px 24px;
            min-width: 180px;
            font-size: 0.95rem;
        }
    }

    @media (max-width: 480px) {
        .calendly-button {
            width: 100%;
            max-width: 280px;
        }
    }
</style>

